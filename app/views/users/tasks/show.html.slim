h1 = 'Task ' + @task.id.to_s
ul
  li= @task.name
  li= @task.description
  - if @task.document
    - if @task.image_attached?
      li= image_tag @task.document.url, class: 'image-size'
    - else
      li= link_to @task.document.file.filename, @task.document.url
.btn-group-vertical
  = button_to 'Edit task', edit_user_task_path(current_user.id, @task.id), class: 'btn-xs btn-primary', method: :get
  = button_to 'Back to tasklist', root_path, class: 'btn-xs btn-success', method: :get
